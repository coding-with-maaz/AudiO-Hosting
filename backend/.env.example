# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=audio_hosting_db
DB_USER=root
DB_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# File Upload Configuration
UPLOAD_DIR=./uploads/audio
MAX_FILE_SIZE=104857600
ALLOWED_AUDIO_TYPES=audio/mpeg,audio/mp3,audio/wav,audio/ogg,audio/aac,audio/flac

# Affiliate Configuration
AFFILIATE_COMMISSION_RATE=0.15
AFFILIATE_MIN_PAYOUT=50

# Payment Configuration (Add your payment gateway keys)
PAYMENT_GATEWAY_SECRET_KEY=

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@audiohosting.com

# Redis Configuration (for queue system - Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Base URL (for email links)
BASE_URL=http://localhost:3000

